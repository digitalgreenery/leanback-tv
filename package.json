{
    "name": "Leanback-TV",
    "version": "1.3.17",
    "description": "Generic Leanback TV interface on the desktop",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "windows:build": "electron-builder --win",
        "mac:build": "electron-builder --mac",
        "linux:build": "electron-builder --linux",
        "linux:build-unpacked": "electron-builder --linux --dir",
        "linux:build-appimage": "electron-builder --linux appimage"
    },
    "keywords": [],
    "author": "Digital Greenery",
    "license": "MPL-2.0",
    "build": {
        "appId": "digitalgreenery.Leanback-TV",
        "productName": "Leanback-TV",
        "artifactName": "Leanback-TV-${arch}.${ext}",
        "linux": {
            "icon": "./assets/icons",
            "synopsis": "Generic Leanback TV interface on the desktop",
            "category": "AudioVideo",
            "desktop": {
                "Name": "Leanback-TV",
                "GenericName": "Leanback Player",
                "Type": "Application",
                "Categories": "AudioVideo;",
                "Keywords": ";"
            },
            "maintainer": "digitalgreenery@proton.me",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "./assets/icon.ico",
            "artifactName": "Leanback-TV-${arch}-Portable.zip",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "nsis": {
            "artifactName": "Leanback-TV-Setup.${ext}",
            "uninstallDisplayName": "Leanback-TV",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "perMachine": false
        },
        "mac": {
            "icon": "./assets/AppIcon.appiconset",
            "category": "public.app-category.video",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "universal"
                    ]
                }
            ]
        },
        "publish": {
            "provider": "github",
            "owner": "Digital Greenery",
            "repo": "Leanback-TV"
        }
    },
    "devDependencies": {
        "electron": "^37.6.0",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {
        "chokidar": "^4.0.3",
        "electron-updater": "^6.6.2"
    }
}
